# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                    controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)



GET         /books               controllers.HomeController.index

POST        /books               controllers.HomeController.addBook

POST        /dvds               controllers.HomeController.addDvd

GET        /dvds               controllers.HomeController.getAllDvds

GET        /items               controllers.HomeController.getAllItems

GET         /readers             controllers.HomeController.readers

DELETE         /items/:id             controllers.HomeController.deleteItem(id: Long)

POST         /items/:id/return             controllers.HomeController.retunItem(id: Long)

POST         /items/:id/borrow             controllers.HomeController.borrowItem(id: Long)

GET         /report             controllers.HomeController.getReport

